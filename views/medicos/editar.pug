extends ../layout

block content
  .row.justify-content-center
    .col-md-8.col-lg-7
      .card.shadow-sm.my-5
        .card-header.bg-primary.text-white.py-3
          h1.h4.mb-0 Editar Médico: #{medico.nombre} #{medico.apellido}
        form(action="/medicos/actualizar/" + medico.id_medico, method="POST")
          .card-body.p-4
            .row.g-3
              .col-md-6
                label.form-label(for="nombre") Nombre
                input.form-control#nombre(type="text", name="nombre", value=medico.nombre, required)
              .col-md-6
                label.form-label(for="apellido") Apellido
                input.form-control#apellido(type="text", name="apellido", value=medico.apellido, required)
              .col-md-6
                label.form-label(for="id_especialidad") Especialidad
                select.form-select#id_especialidad(name="id_especialidad", required)
                  option(value="") Seleccionar Especialidad
                  each esp in especialidades
                    option(value=esp.id_especialidad, selected=(esp.id_especialidad === medico.id_especialidad))= esp.nombre
              .col-md-6
                label.form-label(for="matricula") Matrícula
                input.form-control#matricula(type="text", name="matricula", value=medico.matricula, required)
              .col-md-6
                label.form-label(for="telefono") Teléfono (Opcional)
                input.form-control#telefono(type="text", name="telefono", value=medico.telefono || '')
              .col-md-6
                label.form-label(for="email") Email
                input.form-control#email(type="email", name="email", value=medico.email, required)
              .col-12
                .form-check.form-switch.pt-2
                  input.form-check-input#activo(type="checkbox", name="activo", checked=medico.activo)
                  label.form-check-label(for="activo") Activo
          .card-footer.text-end.bg-light
            a.btn.btn-secondary(href="/medicos") Cancelar
            button.btn.btn-primary.ms-2(type="submit") Actualizar Médico