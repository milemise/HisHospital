extends ../layout

block content
  .max-w-md.mx-auto.bg-white.mt-10.p-8.rounded-2xl.shadow-xl
    h1.text-3xl.font-bold.text-blue-900.mb-6 Editar Médico: #{medico.nombre} #{medico.apellido}

    form(action=`/medicos/actualizar/${medico.id_medico}`, method="POST", class="space-y-6")
      div
        label(for="nombre", class="block text-sm font-medium text-gray-700") Nombre
        input(type="text", name="nombre", id="nombre", value=medico.nombre, required, class="w-full mt-1 rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      div
        label(for="apellido", class="block text-sm font-medium text-gray-700") Apellido
        input(type="text", name="apellido", id="apellido", value=medico.apellido, required, class="w-full mt-1 rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      div
        label(for="id_especialidad", class="block text-sm font-medium text-gray-700") Especialidad
        select(name="id_especialidad", id="id_especialidad", required, class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          option(value="") Seleccionar Especialidad
          each esp in especialidades
            option(value=esp.id_especialidad, selected=(esp.id_especialidad === medico.id_especialidad))= esp.nombre
      div
        label(for="matricula", class="block text-sm font-medium text-gray-700") Matrícula
        input(type="text", name="matricula", id="matricula", value=medico.matricula, required, class="w-full mt-1 rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      div
        label(for="telefono", class="block text-sm font-medium text-gray-700") Teléfono (Opcional)
        input(type="text", name="telefono", id="telefono", value=medico.telefono || '', class="w-full mt-1 rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      div
        label(for="email", class="block text-sm font-medium text-gray-700") Email
        input(type="email", name="email", id="email", value=medico.email, required, class="w-full mt-1 rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      
      div.flex.items-center.space-x-2
        input(type="checkbox", name="activo", id="activo", checked=medico.activo, class="form-checkbox h-5 w-5 text-blue-600 rounded-md focus:ring-blue-500")
        label(for="activo", class="text-sm font-medium text-gray-700") Activo
      
      .flex.justify-end.space-x-4.pt-4
        a(href="/medicos", class="bg-gray-600 hover:bg-gray-700 transition-colors duration-300 text-white font-semibold py-2 px-4 rounded-md shadow-md") Cancelar
        button(type="submit", class="bg-blue-600 hover:bg-blue-700 transition-colors duration-300 text-white font-semibold py-2 px-6 rounded-md shadow-md") Actualizar Médico