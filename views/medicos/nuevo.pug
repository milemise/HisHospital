extends ../layout

block content
  .row.justify-content-center
    .col-md-8.col-lg-7
      .card.shadow-sm.my-5
        .card-header.bg-primary.text-white.py-3
          h1.h4.mb-0 Registrar Nuevo Médico
        form(action="/medicos", method="POST")
          .card-body.p-4
            .row.g-3
              .col-md-6
                label.form-label(for="nombre") Nombre
                input.form-control#nombre(type="text", name="nombre", placeholder="Nombre del médico", required)
              .col-md-6
                label.form-label(for="apellido") Apellido
                input.form-control#apellido(type="text", name="apellido", placeholder="Apellido del médico", required)
              .col-md-6
                label.form-label(for="id_especialidad") Especialidad
                select.form-select#id_especialidad(name="id_especialidad", required)
                  option(value="") Seleccionar Especialidad
                  each esp in especialidades
                    option(value=esp.id_especialidad)= esp.nombre
              .col-md-6
                label.form-label(for="matricula") Matrícula
                input.form-control#matricula(type="text", name="matricula", placeholder="Matrícula profesional", required)
              .col-md-6
                label.form-label(for="telefono") Teléfono (Opcional)
                input.form-control#telefono(type="text", name="telefono", placeholder="Número de teléfono")
              .col-md-6
                label.form-label(for="email") Email
                input.form-control#email(type="email", name="email", placeholder="Correo electrónico", required)
          .card-footer.text-end.bg-light
            a.btn.btn-secondary(href="/medicos") Cancelar
            button.btn.btn-primary.ms-2(type="submit") Guardar Médico