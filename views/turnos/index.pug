extends ../layout

block content
  .max-w-7xl.mx-auto.bg-white.p-8.rounded-2xl.shadow-xl
    .flex.justify-between.items-center.mb-6
      h1.text-3xl.font-bold.text-blue-900 Gestión de Turnos
      a(href="/turnos/nuevo", class="bg-blue-600 hover:bg-blue-700 transition-colors duration-300 text-white font-semibold py-2 px-4 rounded-md shadow-md") Nuevo Turno

    if turnos.length === 0
      p.text-gray-600.mt-4 No hay turnos registrados en el sistema.
    else
      .overflow-x-auto.mt-6
        table.min-w-full.bg-white.border.border-gray-200.rounded-lg.shadow-sm
          thead.bg-blue-100.text-gray-700.uppercase.text-sm
            tr
              th.py-3.px-4.text-left.font-semibold ID Turno
              th.py-3.px-4.text-left.font-semibold Paciente
              th.py-3.px-4.text-left.font-semibold Médico
              th.py-3.px-4.text-left.font-semibold Fecha y Hora
              th.py-3.px-4.text-left.font-semibold Estado
              th.py-3.px-4.text-center.font-semibold Acciones
          tbody.divide-y.divide-gray-200
            each turno in turnos
              tr(class="hover:bg-gray-50 transition-colors duration-100")
                td.py-3.px-4.whitespace-nowrap.text-sm.text-gray-800 #{turno.id_turno}
                td.py-3.px-4.whitespace-nowrap.text-sm.font-medium.text-gray-900 #{turno.paciente ? turno.paciente.nombre + ' ' + turno.paciente.apellido : 'N/A'}
                td.py-3.px-4.whitespace-nowrap.text-sm.text-gray-700 #{turno.medico ? turno.medico.nombre + ' ' + turno.medico.apellido : 'N/A'}
                td.py-3.px-4.whitespace-nowrap.text-sm.text-gray-700 #{turno.fecha_hora ? new Date(turno.fecha_hora).toLocaleString('es-ES') : 'N/A'}
                td.py-3.px-4.whitespace-nowrap.text-sm.font-semibold
                  span(class=['px-2', 'inline-flex', 'text-xs', 'leading-5', 'font-semibold', 'rounded-full', turno.estado === 'confirmado' ? 'bg-green-100 text-green-800' : turno.estado === 'cancelado' ? 'bg-red-100 text-red-800' : turno.estado === 'finalizado' ? 'bg-blue-100 text-blue-800' : 'bg-yellow-100 text-yellow-800']) #{turno.estado}
                td.py-3.px-4.whitespace-nowrap.text-sm.flex.space-x-2.justify-center
                  a(href=`/turnos/editar/${turno.id_turno}`, class="text-indigo-600 hover:text-indigo-800 font-medium transition-colors") Editar
                  form(action=`/turnos/eliminar/${turno.id_turno}`, method="POST", onsubmit="return confirm('¿Está seguro de eliminar este turno?');", style="display:inline-block;")
                    button(type="submit", class="text-red-600 hover:text-red-800 font-medium transition-colors") Eliminar