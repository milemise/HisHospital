extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-8.col-lg-7
        .card.shadow-lg.p-4
          h1.card-title.h3.text-primary.fw-bold.mb-4 Editar Registro

          form(action="/editar" method="POST")
            .row.g-3.mb-4
              .col-md-6
                label.form-label.fw-medium(for="nombre") Nombre
                input.form-control(type="text", id="nombre", name="nombre", required)
              .col-md-6
                label.form-label.fw-medium(for="telefono") Teléfono
                input.form-control(type="text", id="telefono", name="telefono", required)
              .col-12
                label.form-label.fw-medium(for="direccion") Dirección
                input.form-control(type="text", id="direccion", name="direccion")

            .text-end.mt-4
              button.btn.btn-primary(type="submit") Guardar Cambios