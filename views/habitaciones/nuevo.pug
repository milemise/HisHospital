extends ../layout

block content
  .max-w-md.mx-auto.bg-white.mt-10.p-8.rounded-2xl.shadow-xl
    h1.text-3xl.font-bold.text-blue-900.mb-6 Crear Nueva Habitación

    form(action="/habitaciones", method="POST", class="space-y-6")
      div
        label(for="numero", class="block text-sm font-medium text-gray-700") Número de Habitación
        input(type="text", name="numero", id="numero", placeholder="Ej: 101, 202", required, class="w-full mt-1 rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      
      div
        label(for="tipo", class="block text-sm font-medium text-gray-700") Tipo de Habitación
        select(name="tipo", id="tipo", required, class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          option(value="") Seleccionar Tipo
          option(value="Individual") Individual
          option(value="Compartida") Compartida
          option(value="Suite") Suite
      
      div
        label(for="estado", class="block text-sm font-medium text-gray-700") Estado Inicial
        select(name="estado", id="estado", required, class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          option(value="Disponible") Disponible
          option(value="Ocupada") Ocupada
          option(value="Mantenimiento") Mantenimiento
          option(value="Limpieza") Limpieza
      
      div
        label(for="id_ala", class="block text-sm font-medium text-gray-700") Ala
        select(name="id_ala", id="id_ala", required, class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          option(value="") Seleccionar Ala
          each ala in alas
            option(value=ala.id_ala)= ala.nombre

      .flex.justify-end.space-x-4.pt-4
        a(href="/habitaciones", class="bg-gray-600 hover:bg-gray-700 transition-colors duration-300 text-white font-semibold py-2 px-4 rounded-md shadow-md") Cancelar
        button(type="submit", class="bg-blue-600 hover:bg-blue-700 transition-colors duration-300 text-white font-semibold py-2 px-6 rounded-md shadow-md") Guardar Habitación