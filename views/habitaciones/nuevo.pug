extends ../layout

block content
  .row.justify-content-center
    .col-md-7.col-lg-6
      .card.shadow-sm.my-5
        .card-header.bg-primary.text-white.py-3
          h1.h4.mb-0 Crear Nueva Habitación
        form(action="/habitaciones", method="POST")
          .card-body.p-4
            .mb-3
              label.form-label(for="numero") Número de Habitación
              input.form-control#numero(type="text", name="numero", placeholder="Ej: 101, 202", required)
            .mb-3
              label.form-label(for="tipo") Tipo de Habitación
              select.form-select#tipo(name="tipo", required)
                option(value="") Seleccionar Tipo
                option(value="Individual") Individual
                option(value="Compartida") Compartida
                option(value="Suite") Suite
            .mb-3
              label.form-label(for="estado") Estado Inicial
              select.form-select#estado(name="estado", required)
                option(value="Disponible") Disponible
                option(value="Ocupada") Ocupada
                option(value="Mantenimiento") Mantenimiento
                option(value="Limpieza") Limpieza
            .mb-3
              label.form-label(for="id_ala") Ala
              select.form-select#id_ala(name="id_ala", required)
                option(value="") Seleccionar Ala
                each ala in alas
                  option(value=ala.id_ala)= ala.nombre
          .card-footer.text-end.bg-light
            a.btn.btn-secondary(href="/habitaciones") Cancelar
            button.btn.btn-primary.ms-2(type="submit") Guardar Habitación