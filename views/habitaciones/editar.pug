extends ../layout

block content
  .row.justify-content-center
    .col-md-7.col-lg-6
      .card.shadow-sm.my-5
        .card-header
          h1.h4.mb-0 Editar Habitación: #{habitacion.numero}
        form(action="/habitaciones/actualizar/" + habitacion.id_habitacion, method="POST")
          .card-body.p-4
            .mb-3
              label.form-label(for="numero") Número de Habitación
              input.form-control#numero(type="text", name="numero", value=habitacion.numero, required)
            .mb-3
              label.form-label(for="tipo") Tipo de Habitación
              select.form-select#tipo(name="tipo", required)
                option(value="Individual", selected=(habitacion.tipo === 'Individual')) Individual
                option(value="Compartida", selected=(habitacion.tipo === 'Compartida')) Compartida
                option(value="Suite", selected=(habitacion.tipo === 'Suite')) Suite
            .mb-3
              label.form-label(for="estado") Estado
              select.form-select#estado(name="estado", required)
                option(value="Disponible", selected=(habitacion.estado === 'Disponible')) Disponible
                option(value="Ocupada", selected=(habitacion.estado === 'Ocupada')) Ocupada
                option(value="Mantenimiento", selected=(habitacion.estado === 'Mantenimiento')) Mantenimiento
                option(value="Limpieza", selected=(habitacion.estado === 'Limpieza')) Limpieza
            .mb-3
              label.form-label(for="id_ala") Ala
              select.form-select#id_ala(name="id_ala", required)
                each ala in alas
                  option(value=ala.id_ala, selected=(ala.id_ala === habitacion.id_ala))= ala.nombre
          .card-footer.text-end.bg-light
            a.btn.btn-secondary(href="/habitaciones") Cancelar
            button.btn.btn-primary.ms-2(type="submit") Actualizar Habitación