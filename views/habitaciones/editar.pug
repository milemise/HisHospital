extends ../layout

block content
  .max-w-md.mx-auto.bg-white.mt-10.p-8.rounded-2xl.shadow-xl
    h1.text-3xl.font-bold.text-blue-900.mb-6 Editar Habitación: #{habitacion.numero}

    form(action="/habitaciones/actualizar/" + habitacion.id_habitacion, method="POST" class="space-y-6")
      div
        label.block.text-sm.font-medium.text-gray-700 Número de Habitación
        input(type="text", name="numero", value=habitacion.numero required class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      
      div
        label.block.text-sm.font-medium.text-gray-700 Tipo de Habitación
        select(name="tipo" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          option(value="Individual", selected=(habitacion.tipo === 'Individual')) Individual
          option(value="Compartida", selected=(habitacion.tipo === 'Compartida')) Compartida
          option(value="Suite", selected=(habitacion.tipo === 'Suite')) Suite
      
      div
        label.block.text-sm.font-medium.text-gray-700 Estado
        select(name="estado" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          option(value="Disponible", selected=(habitacion.estado === 'Disponible')) Disponible
          option(value="Ocupada", selected=(habitacion.estado === 'Ocupada')) Ocupada
          option(value="Mantenimiento", selected=(habitacion.estado === 'Mantenimiento')) Mantenimiento
          option(value="Limpieza", selected=(habitacion.estado === 'Limpieza')) Limpieza
      
      div
        label.block.text-sm.font-medium.text-gray-700 Ala
        select(name="id_ala" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          each ala in alas
            option(value=ala.id_ala, selected=(ala.id_ala === habitacion.id_ala))= ala.nombre

      .flex.justify-end.space-x-4.mt-6
        a(href="/habitaciones").bg-gray-600.hover:bg-gray-700.transition-colors.duration-300.text-white.font-semibold.py-2.px-4.rounded-md.shadow-md Cancelar
        button(type="submit").bg-blue-600.hover:bg-blue-700.transition-colors.duration-300.text-white.font-semibold.py-2.px-6.rounded-md.shadow-md Actualizar Habitación