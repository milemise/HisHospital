extends ../layout

block content
  .row.justify-content-center
    .col-md-10.col-lg-8
      .card.shadow-sm.my-5
        .card-header.bg-primary.text-white.py-3
          h1.h4.mb-0 Registrar Nuevo Paciente
        form(action="/pacientes", method="POST")
          .card-body.p-4
            .row.g-3
              .col-md-6
                label.form-label(for="nombre") Nombre
                input.form-control#nombre(type="text", name="nombre", placeholder="Nombre del paciente", required)
              .col-md-6
                label.form-label(for="apellido") Apellido
                input.form-control#apellido(type="text", name="apellido", placeholder="Apellido del paciente", required)
              .col-md-6
                label.form-label(for="dni") DNI
                input.form-control#dni(type="text", name="dni", placeholder="Número de DNI", required)
              .col-md-6
                label.form-label(for="fecha_nacimiento") Fecha de Nacimiento
                input.form-control#fecha_nacimiento(type="date", name="fecha_nacimiento", required)
              .col-md-6
                label.form-label(for="genero") Género
                select.form-select#genero(name="genero", required)
                  option(value="") Seleccionar Género
                  option(value="Masculino") Masculino
                  option(value="Femenino") Femenino
                  option(value="Otro") Otro
                  option(value="No especificado") No especificado
              .col-md-6
                label.form-label(for="telefono") Teléfono (Opcional)
                input.form-control#telefono(type="text", name="telefono", placeholder="Número de teléfono")
              .col-md-6
                label.form-label(for="email") Email (Opcional)
                input.form-control#email(type="email", name="email", placeholder="Correo electrónico")
              .col-md-6
                label.form-label(for="direccion") Dirección (Opcional)
                input.form-control#direccion(type="text", name="direccion", placeholder="Dirección del paciente")
              .col-md-6
                label.form-label(for="grupo_sanguineo") Grupo Sanguíneo 
                select.form-select#grupo_sanguineo(name="grupo_sanguineo",required)
                  option(value="") Seleccionar
                  option(value="A+") A+
                  option(value="A-") A-
                  option(value="B+") B+
                  option(value="B-") B-
                  option(value="AB+") AB+
                  option(value="AB-") AB-
                  option(value="O+") O+
                  option(value="O-") O-
              .col-md-6
                label.form-label(for="id_obra_social") Obra Social (Opcional)
                select.form-select#id_obra_social(name="id_obra_social")
                  option(value="") Seleccionar Obra Social
                  each os in obrasSociales
                    option(value=os.id_obra_social)= os.nombre
              .col-md-6
                label.form-label(for="numero_afiliado") Número de Afiliado (Opcional)
                input.form-control#numero_afiliado(type="text", name="numero_afiliado", placeholder="Número de afiliado")
              .col-md-6
                label.form-label(for="alergias") Alergias (Opcional)
                textarea.form-control#alergias(name="alergias", rows="2", placeholder="Alergias conocidas")
              .col-md-6
                label.form-label(for="medicamentos_actuales") Medicamentos Actuales (Opcional)
                textarea.form-control#medicamentos_actuales(name="medicamentos_actuales", rows="2", placeholder="Medicamentos que toma actualmente")
          .card-footer.text-end.bg-light
            a.btn.btn-secondary(href="/pacientes") Cancelar
            button.btn.btn-primary.ms-2(type="submit") Guardar Paciente