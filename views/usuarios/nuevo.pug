extends ../layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-7.col-lg-6
        .card.shadow-lg.p-4
          h1.card-title.h3.text-primary.fw-bold.mb-4 Crear Nuevo Usuario

          form(action="/usuarios", method="POST")
            .mb-3
              label.form-label.fw-medium(for='nombre_usuario') Nombre de Usuario
              input.form-control(type="text", id="nombre_usuario", name="nombre_usuario", placeholder="Nombre completo o nombre de usuario", required)
            .mb-3
              label.form-label.fw-medium(for='email') Email
              input.form-control(type="email", id="email", name="email", placeholder="Correo electrónico del usuario", required)
            .mb-3
              label.form-label.fw-medium(for='password') Contraseña
              input.form-control(type="password", id="password", name="password", placeholder="Contraseña segura", required)
            .mb-4
              label.form-label.fw-medium(for='rol') Rol
              select.form-select(id="rol", name="rol", required)
                option(value="") Seleccionar Rol
                option(value="admin") Administrador
                option(value="medico") Médico
                option(value="enfermero") Enfermero
                option(value="recepcion") Recepción

            .d-flex.justify-content-end.mt-4
              a(href="/usuarios").btn.btn-secondary.me-2 Cancelar
              button.btn.btn-primary(type="submit") Guardar Usuario