extends ../layout

block content
  .row.justify-content-center
    .col-md-7.col-lg-6
      .card.shadow-sm.my-5
        .card-header
          h1.h4.mb-0 Editar Usuario: #{usuario.nombre_usuario}
        form(action="/usuarios/actualizar/" + usuario.id_usuario, method="POST")
          .card-body.p-4
            .mb-3
              label.form-label(for="nombre_usuario") Nombre de Usuario
              input.form-control#nombre_usuario(type="text", name="nombre_usuario", value=usuario.nombre_usuario, required)
            .mb-3
              label.form-label(for="email") Email
              input.form-control#email(type="email", name="email", value=usuario.email, required)
            .mb-3
              label.form-label(for="password") Nueva Contraseña (Dejar vacío para no cambiar)
              input.form-control#password(type="password", name="password", placeholder="••••••••")
            .mb-3
              label.form-label(for="rol") Rol
              select.form-select#rol(name="rol", required)
                option(value="admin", selected=(usuario.rol === 'admin')) Administrador
                option(value="medico", selected=(usuario.rol === 'medico')) Médico
                option(value="enfermero", selected=(usuario.rol === 'enfermero')) Enfermero
                option(value="recepcion", selected=(usuario.rol === 'recepcion')) Recepción
          .card-footer.text-end.bg-light
            a.btn.btn-secondary(href="/usuarios") Cancelar
            button.btn.btn-primary.ms-2(type="submit") Actualizar Usuario