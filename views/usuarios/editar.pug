extends ../layout

block content
  .max-w-md.mx-auto.bg-white.mt-10.p-8.rounded-2xl.shadow-xl
    h1.text-3xl.font-bold.text-blue-900.mb-6 Editar Usuario: #{usuario.nombre_usuario}

    form(action="/usuarios/actualizar/" + usuario.id_usuario, method="POST" class="space-y-6")
      div
        label.block.text-sm.font-medium.text-gray-700 Nombre de Usuario
        input(type="text", name="nombre_usuario", value=usuario.nombre_usuario required class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      div
        label.block.text-sm.font-medium.text-gray-700 Email
        input(type="email", name="email", value=usuario.email required class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      div
        label.block.text-sm.font-medium.text-gray-700 Nueva Contraseña (Dejar vacío para no cambiar)
        input(type="password", name="password", placeholder="********" class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
      div
        label.block.text-sm.font-medium.text-gray-700 Rol
        select(name="rol" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500")
          option(value="admin", selected=(usuario.rol === 'admin')) Administrador
          option(value="medico", selected=(usuario.rol === 'medico')) Médico
          option(value="enfermero", selected=(usuario.rol === 'enfermero')) Enfermero
          option(value="recepcion", selected=(usuario.rol === 'recepcion')) Recepción

      .flex.justify-end.space-x-4.mt-6
        a(href="/usuarios").bg-gray-600.hover:bg-gray-700.transition-colors.duration-300.text-white.font-semibold.py-2.px-4.rounded-md.shadow-md Cancelar
        button(type="submit").bg-blue-600.hover:bg-blue-700.transition-colors.duration-300.text-white.font-semibold.py-2.px-6.rounded-md.shadow-md Actualizar Usuario