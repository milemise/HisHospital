extends layout

block content
  .max-w-2xl.mx-auto.bg-white.mt-16.p-10.rounded-2xl.shadow-xl.text-center
    h1.text-4xl.font-extrabold.text-red-700.mb-4 Oops! Ha ocurrido un error.
    
    .text-gray-700.text-lg.mb-6
      p.font-bold.mb-2 Código de Error: 
        span.text-red-600 #{status || '500'}
      p.mb-4 Mensaje: 
        span.text-red-600 #{message || 'Algo salió mal en el servidor.'}
    
    if error && error.stack && process.env.NODE_ENV === 'development'
      .bg-gray-100.p-4.rounded-lg.text-sm.text-left.font-mono.whitespace-pre-wrap.break-words.max-h-60.overflow-auto.mb-6
        strong Stack Trace:
        pre.mt-2 #{error.stack}

    .mt-8
      a(href="/", class="bg-blue-600 hover:bg-blue-700 transition-colors duration-300 text-white font-semibold py-3 px-6 rounded-lg shadow-md") Volver al Inicio