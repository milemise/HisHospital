extends ../layout

block content
  .row.justify-content-center
    .col-md-7.col-lg-6
      .card.shadow.my-5
        .card-header
          h1.h4.mb-0 Crear Nueva Ala
        form(action="/alas", method="POST")
          .card-body.p-4
            .form-floating
              input.form-control#nombre(type="text", name="nombre", placeholder="Ej: Ala Norte, UCI, Pediatr√≠a", required)
              label(for="nombre") Nombre del Ala
          .card-footer.text-end.bg-light
            a.btn.btn-secondary(href="/alas") Cancelar
            button.btn.btn-primary.ms-2(type="submit") Guardar Ala