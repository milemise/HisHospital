        if admision.evaluaciones && admision.evaluaciones.length > 0
          .table-responsive
            table.table.table-striped.table-hover.table-bordered.mb-0
              thead.table-light
                tr
                  th Fecha
                  th Médico
                  th Diagnóstico
                  th Signos Vitales
                  th Plan de Cuidados
              tbody
