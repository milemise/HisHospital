                    td #{eval.medico ? eval.medico.nombre + ' ' + eval.medico.apellido : 'N/A'}
                    td #{eval.diagnostico || 'N/A'}
                    td
                      if eval.signos_vitales
                        ul.list-unstyled.mb-0
                          if eval.signos_vitales.presion_arterial
