                p.mb-2 #[strong DNI:] #{admision.paciente.dni}
                p.mb-2 #[strong Género:] #{admision.paciente.genero}
                p.mb-2 #[strong Nacimiento:] #{admision.paciente.fecha_nacimiento ? new Date(admision.paciente.fecha_nacimiento).toLocaleDateString('es-ES') : 'N/A'}
